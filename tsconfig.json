{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "@Core/*": ["Core/*"],
      "@Domain/*": ["Domain/*"],
      "@Bootstrap/*": ["Bootstrap/*"],
      "@Service/*": ["Service/*"],
      "@Task/*": ["Task/*"]
    }    
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}